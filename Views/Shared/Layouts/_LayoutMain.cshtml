<!DOCTYPE html>
<html lang="en">
<head>

    <partial name="../LayoutComponents/_Meta.cshtml" />

    <title>@ViewData["Title"] - IBB Portal</title>

    <!-- Custom fonts for this template -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css" />

    <!-- Datatables -->
    <link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/buttons.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/scroller.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/fixedHeader.bootstrap4.min.css" />

    <!-- Form Components -->
    <link rel="stylesheet" href="~/lib/select2/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2/select2-bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/datepicker/bootstrap-datepicker.min.css" />

    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="~/css/sb-admin-2.min.css" />

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js" defer></script>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" defer></script>

    <!-- jQuery Easing -->
    <script src="~/lib/jquery-easing/jquery.easing.min.js" defer></script>

    <!-- Datatables -->
    <script src="~/lib/datatables/jquery.dataTables.min.js" defer></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.min.js" defer></script>
    <script src="~/lib/datatables/dataTables.fixedHeader.min.js" defer></script>
    <script src="~/lib/datatables/dataTables.scroller.min.js" defer></script>
    <script src="~/lib/datatables/dataTables.buttons.min.js" defer></script>
    <script src="~/lib/datatables/buttons.colVis.min.js" defer></script>
    <script src="~/js/demo/datatables-demo.js" defer></script>

    @RenderSection("Scripts", required: false)

    <!-- Form Components -->
    <script src="~/lib/select2/select2.min.js" defer></script>
    <script src="~/lib/datepicker/bootstrap-datepicker.min.js" defer></script>
    <script src="~/lib/datepicker/locales/bootstrap-datepicker.tr.min.js" defer></script>
    <script src="~/js/forms.min.js" defer></script>

    <script src="~/js/sb-admin-2.min.js" asp-append-version="true" defer></script>

</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <partial name="../LayoutComponents/_Sidebar.cshtml" />

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <partial name="../LayoutComponents/_Header.cshtml" />

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- End Page Content -->

            </div>
            <!-- End of Main Content -->

            <partial name="../LayoutComponents/_Footer.cshtml" />
        </div>

    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
</body>
</html>
