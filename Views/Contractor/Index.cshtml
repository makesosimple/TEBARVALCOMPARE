@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            let table = $("#dataTable").DataTable({
                "dom": 'rt<"d-flex justify-content-between flex-column align-items-baseline flex-md-row mt-3"ipl><"clear">',
                //"language": {
                //    "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/turkish.json",
                //},
                "processing": false, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": "/Contractor/JSONTest",
                "columns": [
                    { "data": "title", "autoWidth": true },
                    { "data": "description", "autoWidth": true },
                    { "data": "creationDate", "autoWidth": true },
                    { "data": "updateDate", "autoWidth": true }
                ],
            });

            $('#dataTable thead input, #dataTable thead select').on('keyup change clear', function () {
                table
                    .search(this.value)
                    .draw();
                });
        });

    </script>
}
@{
    ViewData["Title"] = "Yüklenici Yönetimi";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<a class="btn btn-success btn-circle btn-lg" id="add" asp-action="Create"><i class="fas fa-plus"></i></a>

