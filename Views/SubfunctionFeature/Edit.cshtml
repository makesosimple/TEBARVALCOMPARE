@model IBBPortal.Models.SubfunctionFeature

@{
    ViewData["Title"] = "Fonksiyon Özelliği Düzenle";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="SubfunctionFeatureID" />
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-column flex-md-row align-items-center justify-content-between">
            <ul class="nav nav-pills" id="formTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="false">Genel</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <!-- Validation Part. Must be still for all views!! -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Subfunction Feature Title -->
                        <div class="form-group row">
                            <label asp-for="SubfunctionFeatureTitle" class="col-12 col-xl-4 col-form-label">Özellik Başlığı<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="SubfunctionFeatureTitle" type="text" class="form-control" required>
                                <span asp-validation-for="SubfunctionFeatureTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Subfunction Measurement Unit -->
                        <div class="form-group row">
                            <label asp-for="SubfunctionMeasurementUnit" class="col-12 col-xl-4 col-form-label">Özellik Ölçü Birimi<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="SubfunctionMeasurementUnit" type="text" class="form-control" required>
                                <span asp-validation-for="SubfunctionMeasurementUnit" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Subfunction ID -->
                        <div class="form-group row">
                            <label asp-for="SubfunctionID" class="col-12 col-xl-4 col-form-label">Bağlı Olduğu Fonksiyon</label>
                            <div class="col-12 col-xl-8">
                                <select asp-for="SubfunctionID" class="form-control" id="selectFunction" style="width: 100%;">
                                    @if (Model.Subfunction is not null)
                                    {
                                        <option value="@Model.Subfunction.SubfunctionID">@Model.Subfunction.SubfunctionTitle</option>
                                    }

                                    else
                                    {
                                        <option selected value="">Fonksiyon Seçin</option>
                                    }
                                </select>
                                <span asp-validation-for="SubfunctionID" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Subfunction Feature Description -->
                        <div class="form-group row">
                            <label asp-for="SubfunctionFeatureDescription" class="col-12 col-xl-4 col-form-label">Özellik Açıklaması</label>
                            <div class="col-12 col-xl-8">
                                <textarea asp-for="SubfunctionFeatureDescription" class="form-control"></textarea>
                                <span asp-validation-for="SubfunctionFeatureDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Default Values for the Database Date Part -->
                        <input type="hidden" asp-for="CreationDate" />
                        <input type="hidden" asp-for="UpdateDate" />

                        <!-- User ID for the Update -->
                        <input type="hidden" asp-for="UserID" />

                        <div class="buttons mt-3 my-md-0">
                            <button type="submit" value="Save" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                            <a asp-action="Index" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Select2 for Subfunction -->
    <script>
        $('#selectFunction').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/Subfunction/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });
    </script>
}
