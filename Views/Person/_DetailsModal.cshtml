@model IBBPortal.Models.Person

@{ 
    var FullName = @Model.PersonName + " " + @Model.PersonSurname;
}
<!-- Modal -->
<div class="modal fade" id="PhaseModal" tabindex="-1" aria-labelledby="PhaseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between">
                            <h5 class="modal-title" id="exampleModalLabel">Detay</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">İsim</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@FullName</p></div>
                    </div>
                    @if (@Model.isInternal == true)
                    {
                        <div class="row">
                            <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Organizasyon İçi mi?</p></div>
                            <div class="col-12 col-xl-8"><a href="#" class="shadow btn btn-success">EVET</a></div>
                        </div>
                        @if (@Model.JobTitle is not null)
                        {
                            <div class="row">
                                <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Meslek</p></div>
                                <div class="col-12 col-xl-8"><p class="text-primary">@Model.JobTitle.Title</p></div>
                            </div>
                        }
                        @if (@Model.Department is not null)
                        {
                            <div class="row">
                                <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Meslek</p></div>
                                <div class="col-12 col-xl-8"><p class="text-primary">@Model.Department.DepartmentTitle</p></div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Organizasyon İçi mi?</p></div>
                            <div class="col-12 col-xl-8"><a href="#" class="shadow btn btn-danger">HAYIR</a></div>
                        </div>
                        @if (@Model.Contractor is not null)
                        {
                            <div class="row">
                                <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Yüklenici</p></div>
                                <div class="col-12 col-xl-8"><p class="text-primary">@Model.Contractor.Title</p></div>
                            </div>
                        }
                    }
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturan</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.User.UserName</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturma Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.CreationDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Güncelleme Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.UpdateDate</p></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
