@model IBBPortal.Models.Person

@{
    ViewData["Title"] = "Kişi Ekle";
}

<div class="row">
    <div class="justify-content-between py-2 col-12 d-flex">
        <h1 class="h3">@ViewData["Title"]</h1>
    </div>
</div>
<form asp-action="Create">
    <div class="card shadow mb-4">
        @*<div class="card-header py-3 d-flex flex-column flex-md-row align-items-center justify-content-between">
            <ul class="nav nav-pills" id="formTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="false">Genel</a>
                </li>
            </ul>
        </div>*@
        <div class="card-body">
            @*<div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">*@
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <!-- Validation Part. Must be still for all views!! -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Person Name / Surname -->
                        <div class="form-group row">
                            <label asp-for="PersonName" class="col-12 col-lg-4 col-form-label">İsim<span class="text-danger">*</span> / Soyisim<span class="text-danger">*</span></label>
                            <div class="col-12 col-lg-8">
                                <div class="row">
                                    <div class="col-6">
                                        <input asp-for="PersonName" class="form-control">
                                        <span asp-validation-for="PersonName" class="text-danger"></span>
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="PersonSurname" class="form-control">
                                        <span asp-validation-for="PersonSurname" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Person Phone Number -->
                        <div class="form-group row">
                            <label asp-for="PersonPhone" class="col-12 col-xl-4 col-form-label">Telefon Numarası</label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="PersonPhone" type="text" class="form-control phoneField">
                                <span asp-validation-for="PersonPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Person Email -->
                        <div class="form-group row">
                            <label asp-for="PersonEmail" class="col-12 col-xl-4 col-form-label">E-Posta</label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="PersonEmail" type="email" class="form-control">
                                <span asp-validation-for="PersonEmail" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />

                        <!-- Is Internal ? -->
                        <div class="form-group row">
                            <label asp-for="isInternal" class="col-form-label col-12 col-xl-4">Organizasyon İçi mi?<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <div class="text-center d-inline-block col-form-label">
                                    <div class="vc-toggle-container">
                                        <label class="vc-switch">
                                            <input type="checkbox" class="vc-switch-input" asp-for="isInternal">
                                            <span data-on="Evet" data-off="Hayır" class="vc-switch-label"></span>
                                            <span class="vc-handle"></span>
                                            <span asp-validation-for="isInternal" class="text-danger"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Open If Internal Value is false -->
                        <!-- Contractor ID -->
                        <div class="form-group row" data-dependent-on="#isInternal" data-dependent-value="unchecked">
                            <label asp-for="ContractorID" class="col-12 col-xl-4 col-form-label">Yüklenici</label>
                            <div class="col-12 col-xl-8">
                                <select asp-for="ContractorID" class="form-control" id="selectContractor" style="width: 100%;">
                                    <option value="">Yüklenici Seçin</option>
                                </select>
                                <span asp-validation-for="ContractorID" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Open If Internal Value is true -->
                        <!-- Job Title ID -->
                        <div class="form-group row" data-dependent-on="#isInternal" data-dependent-value="checked">
                            <label asp-for="JobTitleID" class="col-12 col-xl-4 col-form-label">Meslek</label>
                            <div class="col-12 col-xl-8">
                                <select asp-for="JobTitleID" class="form-control" id="selectJobTitle" style="width: 100%;">
                                    <option value="">Meslek Seçin</option>
                                </select>
                                <span asp-validation-for="JobTitleID" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Department ID -->
                        <div class="form-group row" data-dependent-on="#isInternal" data-dependent-value="checked">
                            <label asp-for="DepartmentID" class="col-12 col-xl-4 col-form-label">Departman</label>
                            <div class="col-12 col-xl-8">
                                <select asp-for="DepartmentID" class="form-control" id="selectDepartment" style="width: 100%;">
                                    <option value="">Departman Seçin</option>
                                </select>
                                <span asp-validation-for="DepartmentID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="buttons mt-3 my-md-0">
                            <button type="submit" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                            <a asp-action="Index" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                        </div>

                    </div>
                </div>
            </div>
        @*</div>*@
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#selectContractor').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/Contractor/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });

        $('#selectJobTitle').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/JobTitle/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });

        $('#selectDepartment').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/Department/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });

        //Dependent Fields Management
        $("[data-dependent-on]").each(function () {
            //Hide all dependent fields by default until user makes a choice.
            $(this).hide();

            //Get the object, object's target and desired value. 
            let field = $(this);
            let target = $(this).data("dependent-on");
            let desiredValue = $(this).data("dependent-value");
            let status = $(target).is(':checked') ? 'checked' : 'unchecked';

            //Let's check initial state first for UX.
            if (status == desiredValue) field.show();

            //Now every time user changes the input value of the target, certain fields will open or close on DOM.
            $(target).on("change", function () {
                status = $(this).is(':checked') ? 'checked' : 'unchecked';
                if (status == desiredValue) field.show();
                else field.hide();
            });

        });
    </script>
}
