@model IBBPortal.Models.ProjectPhase

@{
    var cultureInfo = CultureInfo.CreateSpecificCulture("tr-TR");

    var StartDate = Model.ProjectPhaseStart.HasValue ? Model.ProjectPhaseStart.Value.ToString("d MMMMM yyyy", cultureInfo) : "";
    var FinishDate = Model.ProjectPhaseFinish.HasValue ? Model.ProjectPhaseFinish.Value.ToString("d MMMMM yyyy", cultureInfo) : "";

    var RecordedStartDate = Model.ProjectPhaseRecordedStart.HasValue ? Model.ProjectPhaseRecordedStart.Value.ToString("d MMMMM yyyy", cultureInfo) : "";
    var RecordedFinishDate = Model.ProjectPhaseRecordedFinish.HasValue ? Model.ProjectPhaseRecordedFinish.Value.ToString("d MMMMM yyyy", cultureInfo) : "";

    var ExtendedFinishDate = Model.ProjectPhaseTimeExtentedFinish.HasValue ? Model.ProjectPhaseTimeExtentedFinish.Value.ToString("d MMMMM yyyy", cultureInfo) : "";

    var CreationDate = Model.CreationDate.ToString("d MMMMM yyyy HH:mm:ss", cultureInfo);
    var UpdateDate = Model.UpdateDate.HasValue ? Model.UpdateDate.Value.ToString("d MMMMM yyyy HH:mm:ss", cultureInfo) : "";
}

<!-- Modal -->
<div class="modal fade" id="ProjectPhaseDetailModal" tabindex="-1" aria-labelledby="ProjectPhaseDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between">
                            <h5 class="modal-title" id="exampleModalLabel">Detay</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Faz</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.Phase.PhaseTitle</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Faz Durumu</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.ProjectPhaseStatus.ProjectPhaseStatusTitle</p></div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Başlangıç Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@StartDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Bitiş Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@FinishDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Resmi Başlangıç Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@RecordedStartDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Resmi Bitiş Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@RecordedFinishDate</p></div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Uzatma Süresi(Gün)</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.ProjectPhaseTimeExtension</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Uzatılmış Bitiş Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@ExtendedFinishDate</p></div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturan</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.User.UserName</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturma Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.CreationDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Güncelleme Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.UpdateDate</p></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
