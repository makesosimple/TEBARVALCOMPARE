@model IEnumerable<IBBPortal.Models.City>

@{
    ViewData["Title"] = "Index";
}

@section Scripts
{
    <!-- Table Script -->
    <script type="text/javascript">

        $(document).ready(function () {
            let table = $("#dataTable").DataTable({
                "dom": 'rt<"d-flex justify-content-between flex-column align-items-baseline flex-md-row mt-3"ipl><"clear">',
                //"language": {
                //    "url": "https://cdn.datatables.net/plug-ins/1.10.25/i18n/turkish.json",
                //},
                "processing": false, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/District/JSONData",
                    "type": "GET"
                },
                "columns": [
                    { "data": "districtName", "autoWidth": true },
                    { "data": "districtCode", "autoWidth": true },
                    { "data": "creationDate", "autoWidth": true },
                    { "data": "updateDate", "autoWidth": true },
                    {
                        "data": null,
                        "render": function (data, type, full, meta, row) {
                            return `<a class="btn btn-circle bg-turqoise text-white" href="/District/Edit/${full.districtID}"><i class="fas fa-edit"></i></a>\
                                        <button type="button" class="btn btn-circle bg-warning text-white" onclick="modalScript(this)" data-url="/District/Details/${full.districtID}"><i class="fas fa-info-circle"></i></button>\
                                        <button type="button" class="btn btn-circle bg-danger text-white" onclick="modalScript(this)" data-url="/District/Delete/${full.districtID}" ><i class="fas fa-trash-alt"></i></button>`;
                        }
                    },
                ],
                "columnDefs": [
                    { "targets": -1, "orderable": false },
                ],
            });

            $('#dataTable thead input, #dataTable thead select').on('input clear', function () {
                $.ajax({
                    url: '/District/JSONData',
                    type: 'post',
                    data: $(this).serialize(),
                    //success: function () {
                    //    console.log($(this));
                    //}
                });

                $.get("/District/JSONData", function (data) {
                    console.log(data);
                });
            });
        });
    </script>

}
@{
    ViewData["Title"] = "İlçe Yönetimi";
}

<div id="GeneralModal"></div>

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>

<a class="btn btn-success btn-circle btn-lg" id="add" asp-action="Create"><i class="fas fa-plus"></i></a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive position-relative">
            <table class="table table-hover display" id="dataTable" width="100%">
                <thead class="bg-navy-blue">
                    <tr class="filter h-100 bg-white">
                        <th scope="col"><form asp-action="JSONData" method="post"><input class="form-control w-100" data-index="0" type="text" placeholder="Ara..." id="districtTitle" name="cityName" value="" /></form></th>
                        <th scope="col"><form asp-action="JSONData" method="post"><input class="form-control w-100" data-index="1" type="text" placeholder="Ara..." id="districtCode" name="cityCode" value="" /></form></th>
                        <th scope="col"><form asp-action="JSONData" method="post"><input class="form-control w-100" data-index="2" type="text" placeholder="Ara..." id="creationDate" name="creationDate" value="" /></form></th>
                        <th scope="col"><form asp-action="JSONData" method="post"><input class="form-control w-100" data-index="3" type="text" placeholder="Ara..." id="updateDate" name="updateDate" value="" /></form></th>
                        <th scope="col"></th>
                    </tr>
                    <tr id="tableLabels">
                        <th scope="col" class="text-white text-sm" data-search-type="text">İlçe Adı</th>
                        <th scope="col" class="text-white text-sm" data-search-type="text">İlçe Kodu</th>
                        <th scope="col" class="text-white text-sm" data-search-type="text">Oluşturma Tarihi</th>
                        <th scope="col" class="text-white text-sm" data-search-type="text">Güncelleme Tarihi</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>

                </tfoot>

            </table>
        </div>
    </div>
</div>
