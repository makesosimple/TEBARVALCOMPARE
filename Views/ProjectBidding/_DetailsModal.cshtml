@model IBBPortal.Models.ProjectBidding

@{
    var cultureInfo = CultureInfo.CreateSpecificCulture("tr-TR");

    var BiddingDate = Model.BiddingDate.HasValue ? Model.BiddingDate.Value.ToString("d MMMMM yyyy", cultureInfo) : "";

    var ContractCost = "₺ " + Model.BiddingContractCost.ToString("N2", cultureInfo);

    var ProgressPayment = "₺ " + Model.BiddingProgressPayment.ToString("N2", cultureInfo);

    var CreationDate = Model.CreationDate.ToString("d MMMMM yyyy HH:mm:ss", cultureInfo);
    var UpdateDate = Model.UpdateDate.HasValue ? Model.UpdateDate.Value.ToString("d MMMMM yyyy HH:mm:ss", cultureInfo) : "";
}

<!-- Modal -->
<div class="modal fade" id="ProjectPhaseDetailModal" tabindex="-1" aria-labelledby="ProjectPhaseDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between">
                            <h5 class="modal-title" id="exampleModalLabel">Detay</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">İhale</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.BiddingTitle</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">İhale Kodu</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.BiddingCode</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">İhale Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@BiddingDate</p></div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Faz</p></div>
                        <div class="col-12 col-xl-8"><div class="btn btn-warning">@Model.ProjectPhase.Phase.PhaseTitle</div></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Müdürlük</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.Department.DepartmentTitle</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Yüklenici</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.Contractor.Title</p></div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Sözleşme Bedeli</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@ContractCost</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Hakediş Bedeli</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@ProgressPayment</p></div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturan</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.User.UserName</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturma Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@CreationDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Güncelleme Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@UpdateDate</p></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
