@model IBBPortal.Models.ProjectPerson

<!-- Modal -->
<div class="modal fade" id="ProjectPersonDetailModal" tabindex="-1" aria-labelledby="ProjectPersonDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between">
                            <h5 class="modal-title" id="exampleModalLabel">Detay</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    @if (Model.IsInternal)
                    {
                        <div class="row">
                            <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Organizasyon İçi mi?</p></div>
                            <div class="col-12 col-xl-8"><a href="#" class="btn btn-success">EVET</a></div>
                        </div>
                        @if (@Model.Person is not null)
                        {
                            <div class="row">
                                <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Kişi</p></div>
                                <div class="col-12 col-xl-8"><p class="text-primary">@Model.Person.PersonName @Model.Person.PersonSurname</p></div>
                            </div>
                        }

                        @if (@Model.JobTitle is not null)
                        {
                            <div class="row">
                                <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Görevi</p></div>
                                <div class="col-12 col-xl-8"><p class="text-primary">@Model.JobTitle.Title</p></div>
                            </div>
                        }
                        @if (@Model.JobField is not null)
                        {
                            <div class="row">
                                <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Alanı</p></div>
                                <div class="col-12 col-xl-8"><p class="text-primary">@Model.JobField.JobFieldTitle</p></div>
                            </div>
                        }
                    }

                    else
                    {
                        <div class="row">
                            <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Organizasyon İçi mi?</p></div>
                            <div class="col-12 col-xl-8"><a href="#" class="btn btn-danger">HAYIR</a></div>
                        </div>

                        @if (@Model.Contractor is not null)
                        {
                            <div class="row">
                                <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Yüklenici</p></div>
                                <div class="col-12 col-xl-8"><p class="text-primary">@Model.Contractor.Title</p></div>
                            </div>
                        }
                    }
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturan</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.User.UserName</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturma Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.CreationDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Güncelleme Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.UpdateDate</p></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
