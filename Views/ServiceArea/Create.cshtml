@model IBBPortal.Models.ServiceArea

@{
    ViewData["Title"] = "Hizmet Alanı Ekle";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>
<form asp-action="Create">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-column flex-md-row align-items-center justify-content-between">
            <ul class="nav nav-pills" id="formTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="false">Genel</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <!-- Validation Part. Must be still for all views!! -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Service Area Title -->
                        <div class="form-group row">
                            <label asp-for="ServiceAreaTitle" class="col-12 col-xl-4 col-form-label">Hizmet Alanı İsmi<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="ServiceAreaTitle" type="text" class="form-control" required>
                                <span asp-validation-for="ServiceAreaTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Parent Service Area ID -->
                        <div class="form-group row">
                            <label asp-for="ParentServiceAreaID" class="col-12 col-xl-4 col-form-label">Bağlı Olduğu Hizmet Alanı</label>
                            <div class="col-12 col-xl-8">
                                <select asp-for="ParentServiceAreaID" class="form-control" id="selectServiceArea" style="width: 100%;">
                                    <option selected value="">Hizmet Alanı Seçin</option>
                                </select>
                                <span asp-validation-for="ServiceAreaID" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Service Area Description -->
                        <div class="form-group row">
                            <label asp-for="ServiceAreaDescription" class="col-12 col-xl-4 col-form-label">Hizmet Alanı Açıklaması</label>
                            <div class="col-12 col-xl-8">
                                <textarea asp-for="ServiceAreaDescription" class="form-control"></textarea>
                                <span asp-validation-for="ServiceAreaDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="buttons mt-3 my-md-0">
                            <button type="submit" value="Save" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                            <a asp-action="Index" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Select2 for City -->
    <script>
        $('#selectServiceArea').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/ServiceArea/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });
    </script>
}
