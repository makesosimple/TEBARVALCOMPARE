@model IBBPortal.Models.Phase

@{
    ViewData["Title"] = "Meslek Ekle";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>
<form asp-action="Create">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-column flex-md-row align-items-center justify-content-between">
            <ul class="nav nav-pills" id="formTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="false">Genel</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <!-- Validation Part. Must be still for all views!! -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Phase Title -->
                        <div class="form-group row">
                            <label asp-for="PhaseTitle" class="col-12 col-xl-4 col-form-label">Faz İsmi<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="PhaseTitle" type="text" class="form-control" required>
                                <span asp-validation-for="PhaseTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Previous Phase ID -->
                        <div class="form-group row">
                            <label asp-for="PreviousPhaseID" class="col-12 col-xl-4 col-form-label">Önceki Faz</label>
                            <div class="col-12 col-xl-8">
                                <select asp-for="PreviousPhaseID" class="form-control" id="selectPhase" style="width: 100%;">
                                    <option selected value="">Dosya Kategorisi Seçin</option>
                                </select>
                                <span asp-validation-for="PreviousPhaseID" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Is Presentation ? -->
                        <div class="form-group row">
                            <label asp-for="isPresentation" class="col-form-label col-12 col-xl-4">Sunum mu?<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <div class="text-center d-inline-block col-form-label">
                                    <div class="vc-toggle-container">
                                        <label class="vc-switch">
                                            <input type="checkbox" class="vc-switch-input" asp-for="isPresentation">
                                            <span data-on="Evet" data-off="Hayır" class="vc-switch-label"></span>
                                            <span class="vc-handle"></span>
                                            <span asp-validation-for="isPresentation" class="text-danger"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Phase Description -->
                        <div class="form-group row">
                            <label asp-for="PhaseDescription" class="col-12 col-xl-4 col-form-label">Faz Açıklaması</label>
                            <div class="col-12 col-xl-8">
                                <textarea asp-for="PhaseDescription" class="form-control"></textarea>
                                <span asp-validation-for="PhaseDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Default Values for the Database Date Part-->
                        <input type="hidden" asp-for="CreationDate" value="@ViewBag.CurrentDate" />

                        <!-- User ID for the Creation -->
                        <input type="hidden" asp-for="UserID" value="@ViewBag.UserID" />

                        <div class="buttons mt-3 my-md-0">
                            <button type="submit" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                            <a asp-action="Index" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Select2 for Phase -->
    <script>
        $('#selectPhase').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/Phase/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });
    </script>
}
