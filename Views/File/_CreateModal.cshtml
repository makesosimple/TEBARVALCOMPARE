<!-- Modal -->
<div class="modal fade" id="FileCreateModal" tabindex="-1" aria-labelledby="FileCreateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <form action="/File/Create" enctype="multipart/form-data" method="post" onsubmit="AJAXSubmit(this); return false;">
                
                <!-- Project ID for the Creation -->
                <input type="hidden" name="ProjectID" id="ProjectID" value="@ViewBag.ProjectID" />

                <div class="modal-header">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-between">
                                <h5 class="modal-title" id="exampleModalLabel">Döküman Ekle</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">


                        <!-- File Upload Type -->
                        <div class="form-group row">
                            <label class="col-12 col-xl-4 col-form-label">Yükleme Tipi<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8 d-flex">
                                <div class="custom-control custom-checkbox small d-flex align-items-center mr-4">
                                    <input name="FileUploadType" id="FileUploadType_10" class="custom-control-input" type="radio" value="10" data-val="true" data-val-required="Bu alanın doldurulması zorunludur.">
                                    <label class="custom-control-label custom-control-padding-fix" for="FileUploadType_10">Upload</label>
                                </div>
                                <div class="custom-control custom-checkbox small d-flex align-items-center">
                                    <input name="FileUploadType" id="FileUploadType_20" class="custom-control-input" type="radio" value="20" data-val="true" data-val-required="Bu alanın doldurulması zorunludur.">
                                    <label class="custom-control-label custom-control-padding-fix" for="FileUploadType_20">Dosya Linki</label>
                                </div>
                                <span class="text-danger field-validation-valid" data-valmsg-for="FileUploadType" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <!-- File Category ID -->
                        <div class="form-group row">
                            <label for="FileCategoryID" class="col-12 col-xl-4 col-form-label">Kategori<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <select name="FileCategoryID" id="FileCategoryID" class="form-control" style="width: 100%;" required>
                                    <option value="">Dosya Kategorisi Seçin</option>
                                </select>
                            </div>
                        </div>

                        <!-- Project Bidding ID -->
                        <div class="form-group row">
                            <label for="ProjectBiddingID" class="col-12 col-xl-4 col-form-label">İhale</label>
                            <div class="col-12 col-xl-8">
                                <select name="ProjectBiddingID" id="ProjectBiddingID" class="form-control" style="width: 100%;">
                                    <option value="">İhale Seçin</option>
                                </select>
                            </div>
                        </div>

                        <!-- File Name -->
                        <div class="form-group row">
                            <label for="FileName" class="col-12 col-xl-4 col-form-label">Dosya Başlığı<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <input type="text" name="FileName" id="FileName" class="form-control" required />
                            </div>
                        </div>

                        <!-- Etiketler alanı ekle -->
                        <!-- Project File ID -->
                        <div class="form-group row">
                            <label for="ProjectFile" class="col-12 col-xl-4 col-form-label">Dosya<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <input type="file" name="ProjectFile" id="ProjectFile" class="form-control" required />
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <div class="buttons">
                        <button type="submit" value="Save" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                        <a asp-route="Index/@ViewBag.ProjectID" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    "use strict";

    $('#FileCategoryID').select2({
        theme: "ibb",
        language: "tr",
        dropdownParent: $(".modal"),
        ajax: {
            url: '/FileCategory/JsonSelectData',
            dataType: 'json',
            processResults: function (response) {

                return {
                    results: response.results,
                };
            }
        }
    });

    $('#ProjectBiddingID').select2({
        theme: "ibb",
        language: "tr",
        dropdownParent: $(".modal"),
        ajax: {
            url: '/ProjectBidding/JsonSelectData',
            dataType: 'json',
            data: function (params) {

                let query = {
                    projectID: @ViewBag.ProjectID,
                    term: params.term
                }
                return query;
            },
            processResults: function (response) {

                return {
                    results: response.results,
                };
            }
        }
    });

    async function AJAXSubmit (oFormElement) {

        const formData = new FormData(oFormElement);

      try {
        const response = await fetch(oFormElement.action, {
          method: 'POST',
          headers: {
            'RequestVerificationToken': getCookie('RequestVerificationToken')
          },
          body: formData
        });
          response.then(function () {
              const responseBody = response.json();
              for ({ key, value } in responseBody) {
                  console.log(key, value);
              }
          });
      } catch (error) {
        console.error('Error:', error);
      }
    }

    function getCookie(name) {
      var value = "; " + document.cookie;
      var parts = value.split("; " + name + "=");
      if (parts.length == 2) return parts.pop().split(";").shift();
    }
</script>

