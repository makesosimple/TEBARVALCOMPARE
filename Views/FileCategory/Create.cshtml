@model IBBPortal.Models.FileCategory

@{
    ViewData["Title"] = "Dosya Kategorisi Ekle";
}

<div class="row">
    <div class="justify-content-between py-2 col-12 d-flex">
        <h1 class="h3 text-gray-800">@ViewData["Title"]</h1>
    </div>
</div>
<form asp-action="Create">
    <div class="card shadow mb-4">
        @*<div class="card-header py-3 d-flex flex-column flex-md-row align-items-center justify-content-between">
            <ul class="nav nav-pills" id="formTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="false">Genel</a>
                </li>
            </ul>
        </div>*@
        <div class="card-body">
            @*<div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">*@
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <!-- Validation Part. Must be still for all views!! -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Category Title -->
                        <div class="form-group row">
                            <label asp-for="FileCategoryTitle" class="col-12 col-xl-4 col-form-label">Kategori İsmi<span class="text-danger">*</span></label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="FileCategoryTitle" type="text" class="form-control" required>
                                <span asp-validation-for="FileCategoryTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Folder Name -->
                        <div class="form-group row">
                            <label asp-for="FileCategoryFolderName" class="col-12 col-xl-4 col-form-label">Klasör İsmi</label>
                            <div class="col-12 col-xl-8">
                                <input asp-for="FileCategoryFolderName" type="text" class="form-control">
                                <span asp-validation-for="FileCategoryFolderName" class="text-danger"></span>
                            </div>
                        </div>


                        <!-- Parent File Category ID -->
                        <div class="form-group row">
                            <label asp-for="ParentFileCategoryID" class="col-12 col-xl-4 col-form-label">Bağlı Olduğu Kategori</label>
                            <div class="col-12 col-xl-8">
                                <select asp-for="ParentFileCategoryID" class="form-control" id="selectFileCategory" style="width: 100%;">
                                    <option selected value="">Dosya Kategorisi Seçin</option>
                                </select>
                                <span asp-validation-for="FileCategoryID" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- File Category Description -->
                        <div class="form-group row">
                            <label asp-for="FileCategoryDescription" class="col-12 col-xl-4 col-form-label">Kategori Açıklaması</label>
                            <div class="col-12 col-xl-8">
                                <textarea asp-for="FileCategoryDescription" class="form-control"></textarea>
                                <span asp-validation-for="FileCategoryDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="buttons mt-3 my-md-0">
                            <button type="submit" value="Save" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                            <a asp-action="Index" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                        </div>

                    </div>
                </div>
            </div>
        @*</div>*@
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Select2 for City -->
    <script>
        $('#selectFileCategory').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/FileCategory/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });
    </script>
}
