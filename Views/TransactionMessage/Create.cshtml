@model IBBPortal.Models.TransactionMessages

@{
    ViewData["Title"] = "İşlem Mesajı Ekle";
}

<h1 class="h3 mb-4 text-gray-800">@ViewData["Title"]</h1>
<form asp-action="Create">
    <div class="card shadow mb-4">
        @*<div class="card-header py-3 d-flex flex-column flex-md-row align-items-center justify-content-between">
                <ul class="nav nav-pills" id="formTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="false">Genel</a>
                    </li>
                </ul>
            </div>*@
        <div class="card-body">
            @*<div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">*@
            <div class="row">
                <div class="col-12 col-xl-6">
                    <!-- Validation Part. Must be still for all views!! -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Transaction Message Content -->
                    <div class="form-group row">
                        <label asp-for="TransactionMessageContent" class="col-12 col-xl-4 col-form-label">İşlem Mesajı<span class="text-danger">*</span></label>
                        <div class="col-12 col-xl-8">
                            <input asp-for="TransactionMessageContent" type="text" class="form-control" required>
                            <span asp-validation-for="TransactionMessageContent" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-group row">
                        <label asp-for="@Model.TransactionMessageDescription" class="col-12 col-xl-4 col-form-label">İşlem Mesajı Açıklaması</label>
                        <div class="col-12 col-xl-8">
                            <textarea class="form-control" asp-for="@Model.TransactionMessageDescription" rows="3"></textarea>
                            <span asp-validation-for="@Model.TransactionMessageDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Transaction Type ID -->
                    <div class="form-group row">
                        <label asp-for="TransactionTypeID" class="col-12 col-xl-4 col-form-label">İşlem Türü<span class="text-danger">*</span></label>
                        <div class="col-12 col-xl-8">
                            <select asp-for="TransactionTypeID" class="form-control" id="selectTransactionType" style="width: 100%;">
                                <option selected value="">İşlem Türü Seçin</option>
                            </select>
                            <span asp-validation-for="TransactionTypeID" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Transaction Message Slug -->
                    <div class="form-group row">
                        <label asp-for="TransactionMessageSlug" class="col-12 col-xl-4 col-form-label">Slug</label>
                        <div class="col-12 col-xl-8">
                            <input asp-for="TransactionMessageContent" type="text" class="form-control">
                            <span asp-validation-for="TransactionMessageSlug" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="buttons mt-3 my-md-0">
                        <button type="submit" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                        <a asp-action="Index" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                    </div>

                </div>
            </div>
        </div>
        @*</div>*@
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Select2 for Transaction Type -->
    <script>
        $('#selectTransactionType').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/TransactionType/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });
    </script>
}
