@model IBBPortal.Models.TransactionMessages

@{
    ViewData["Title"] = "İşlem Mesajı Düzenle";
}

<!-- Alert for Success -->
@if (@TempData["SuccessTitle"] is not null)
{
    <div class="alert bg-gradient-success alert-dismissible fade show border-0" role="alert">
        <h4 class="alert-heading text-white">
            <i class="fas fa-check"></i>
            @TempData["SuccessTitle"]
            <button type="button" class="close text-white" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h4>
        <p class="text-white">@TempData["SuccessMessage"]</p>
    </div>
}

<div class="row">
    <div class="justify-content-between py-2 col-12 d-flex">
        <h1 class="h3">@ViewData["Title"]</h1>
    </div>
</div>
<form asp-action="Edit">
    <input type="hidden" asp-for="TransactionMessageID" />
    <div class="card shadow mb-4">
        @*<div class="card-header py-3 d-flex flex-column flex-md-row align-items-center justify-content-between">
                <ul class="nav nav-pills" id="formTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="false">Genel</a>
                    </li>
                </ul>
            </div>*@
        <div class="card-body">
            @*<div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">*@
            <div class="row">
                <div class="col-12 col-xl-6">
                    <!-- Validation Part. Must be still for all views!! -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Transaction Message Content -->
                    <div class="form-group row">
                        <label asp-for="TransactionMessageContent" class="col-12 col-xl-4 col-form-label">İşlem Mesajı<span class="text-danger">*</span></label>
                        <div class="col-12 col-xl-8">
                            <input asp-for="TransactionMessageContent" type="text" class="form-control" required>
                            <span asp-validation-for="TransactionMessageContent" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-group row">
                        <label asp-for="TransactionMessageDescription" class="col-12 col-xl-4 col-form-label">İşlem Mesajı Açıklaması</label>
                        <div class="col-12 col-xl-8">
                            <textarea class="form-control" asp-for="TransactionMessageDescription" rows="3"></textarea>
                            <span asp-validation-for="TransactionMessageDescription" class="text-danger"></span>
                        </div>
                    </div>


                    <!-- Transaction Type ID -->
                    <div class="form-group row">
                        <label asp-for="TransactionTypeID" class="col-12 col-xl-4 col-form-label">İşlem Türü<span class="text-danger">*</span></label>
                        <div class="col-12 col-xl-8">
                            <select asp-for="TransactionTypeID" class="form-control" id="selectTransactionType" style="width: 100%;">
                                <option value="@Model.TransactionType.TransactionTypeID">@Model.TransactionType.TransactionTypeName</option>
                            </select>
                            <span asp-validation-for="TransactionTypeID" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Transaction Message Slug -->
                    <div class="form-group row">
                        <label asp-for="TransactionMessageSlug" class="col-12 col-xl-4 col-form-label">Slug</label>
                        <div class="col-12 col-xl-8">
                            <input asp-for="TransactionMessageSlug" type="text" class="form-control">
                            <span asp-validation-for="TransactionMessageSlug" class="text-danger"></span>
                        </div>
                    </div>


                    <!-- Default Values for the Database Date Part -->
                    <input type="hidden" asp-for="CreationDate" />
                    <input type="hidden" asp-for="UpdateDate" />

                    <!-- User ID for the Update -->
                    <input type="hidden" asp-for="UserID" />

                    <div class="buttons mt-3 my-md-0">
                        <button type="submit" value="Save" class="btn bg-success text-white"><i class="fas fa-save mr-2"></i> Kaydet</button>
                        <a asp-action="Index" class="btn btn-danger"><i class="fas fa-trash-alt mr-2"></i> Vazgeç</a>
                    </div>

                </div>
            </div>
        </div>
        @*</div>*@
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Select2 for Transaction Type -->
    <script>
        $('#selectTransactionType').select2({
            theme: "ibb",
            language: "tr",
            ajax: {
                url: '/TransactionType/JsonSelectData',
                dataType: 'json',
                processResults: function (response) {

                    return {
                        results: response.results,
                    };
                }
            }
        });
    </script>
}
