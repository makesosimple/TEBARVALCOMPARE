@model IBBPortal.Models.ProjectRelation

<!-- Modal -->
<div class="modal fade" id="ProjectRelationDetailModal" tabindex="-1" aria-labelledby="ProjectRelationDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between">
                            <h5 class="modal-title" id="exampleModalLabel">Detay</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    @if (@Model.RelatedProject is not null)
                    {
                        <div class="row">
                            <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">İlişkili Proje</p></div>
                            <div class="col-12 col-xl-8"><p class="text-primary">@Model.RelatedProject.ProjectTitle</p></div>
                        </div>
                    }
                    @if (@Model.RelationType is not null)
                    {
                        <div class="row">
                            <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">İlişki Tipi</p></div>
                            <div class="col-12 col-xl-8"><p class="text-white text-sm btn btn-info">@Model.RelationType.RelationTypeTitle</p></div>
                        </div>
                    }
                    <hr />
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturan</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.User.UserName</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Oluşturma Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.CreationDate</p></div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-4"><p class="text-primary font-weight-bold">Güncelleme Tarihi</p></div>
                        <div class="col-12 col-xl-8"><p class="text-primary">@Model.UpdateDate</p></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
